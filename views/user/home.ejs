    <script>
      function addtoCart(id) {
        $.ajax({
          url: "/addtoCart",
          type: "POST",
          encoded: true,
          data: {
            id: id,
          },
        }).done((data) => {
          if (data.success) {
            swal("Added", "Item added to cart", "success" );
            
		}
		else{
			swal("Oops!", "User not found. Please login.", "error");
		}
          
        });
      }
    </script>
    <script>
      function addToWishlist(id){
            $.ajax({
                url : "/addtoWishlist",
                method : "post",
                encoded : true,
                data : {
                    id : id
                }
            }).done((data) => {
                if(data.success) {
                    swal("Added!", "Item has been added to whislist!", "success");
                }else if(data.already){
                    swal("Oops!", "Already added", "error")
                }else {
                    swal("Oops!", "User not found. Please login.", "error")

                }
            })
        }
    </script>


